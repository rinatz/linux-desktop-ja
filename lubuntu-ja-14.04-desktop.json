{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "lubuntu-ja-14.04-desktop.ova",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S env {{ .Vars }} {{ .Path }}",
      "script": "lubuntu.sh"
    },
    {
      "type": "ansible-local",
      "playbook_dir": "playbooks",
      "playbook_file": "playbooks/site.yml"
    }
  ],
  "post-processors": [
    {
      "output": "lubuntu-ja-14.04-desktop.box",
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile"
    }
  ]
}
